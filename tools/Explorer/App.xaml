<Application x:Class="XppReasoningWpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:XppReasoningWpf"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        <SolidColorBrush x:Key="GridSplitterBrush" Color="Silver"/>

        <Style TargetType="{x:Type GridSplitter}" x:Key="HorizontalSplitter">
            <Style.Setters>
                <Setter Property="Background" Value="{StaticResource GridSplitterBrush}"/>
                <Setter Property="Height" Value="3"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style.Setters>
        </Style>
        <Style TargetType="{x:Type GridSplitter}" x:Key="VerticalSplitter">
            <Style.Setters>
                <Setter Property="Background" Value="{StaticResource GridSplitterBrush}"/>
                <Setter Property="Width" Value="3"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Stretch"/>
            </Style.Setters>
        </Style>
    </Application.Resources>
</Application>
